<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="db.properties"/>
    <context id="clc" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.FluentBuilderMethodsPlugin" />
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin">
            <property name="useToStringFromRoot" value="true"/>
        </plugin>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin" />
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />

        <commentGenerator type="campuslifecenter.mbg.CommentGenerator">
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.connectionURL}"
                        userId="${jdbc.userId}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="campuslifecenter.notice.entry"
                            targetProject="./notice/src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="campuslifecenter.notice.mapper"
                         targetProject="./notice/src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="MIXEDMAPPER"
                             targetPackage="campuslifecenter.notice.mapper"
                             targetProject="./notice/src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- notice -->
        <table tableName="notice">
            <generatedKey column="id" sqlStatement="SELECT LAST_INSERT_ID()" identity="true" />
        </table>
        <table tableName="notice_info"/>
        <table tableName="notice_tag"/>

        <table tableName="account_subscribe"/>
        <table tableName="account_notice"/>

        <table tableName="notice_update_log"/>

        <table tableName="publish_organization"/>
        <table tableName="publish_todo"/>
        <table tableName="publish_info"/>

    </context>
</generatorConfiguration>