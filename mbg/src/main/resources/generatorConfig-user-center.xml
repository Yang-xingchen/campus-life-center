<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="db.properties"/>
    <context id="clc" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.FluentBuilderMethodsPlugin" />
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin" />
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />

        <commentGenerator type="campuslifecenter.mbg.CommentGenerator">
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.connectionURL}"
                        userId="${jdbc.userId}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="campuslifecenter.usercenter.entry"
                            targetProject="./user-center/src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="campuslifecenter.usercenter.mapper"
                         targetProject="./user-center/src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="MIXEDMAPPER"
                             targetPackage="campuslifecenter.usercenter.mapper"
                             targetProject="./user-center/src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="account" domainObjectName="Account" >
            <generatedKey column="sign_id" sqlStatement="CALL IDENTITY()" identity="true" />
        </table>
        <table tableName="organization" domainObjectName="Organization" >
            <generatedKey column="id" sqlStatement="CALL IDENTITY()" identity="true" />
        </table>
        <table tableName="permission" domainObjectName="Permission" >
            <generatedKey column="id" sqlStatement="CALL IDENTITY()" identity="true" />
        </table>
        <table tableName="account_organization" domainObjectName="AccountOrganization" />
        <table tableName="role_permission" domainObjectName="RolePermission" />
        <table tableName="signInLog" domainObjectName="SignInLog" />
        <table tableName="securityLog" domainObjectName="SecurityLog" />
    </context>
</generatorConfiguration>